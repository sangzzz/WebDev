<%- include("header") -%>

<div class="box" id="heading">
  <h1>
    <%= today %>
  </h1>
</div>

<div class="box">

  <%  addTask.forEach(function(item){ %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="del" onChange="this.form.submit()" value="<%= item._id %>">
      <p>
        <%= item.task %>
      </p>
    </div>
  </form>

  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="task" value="" placeholder="New Task" autocomplete="off">
    <button type="submit" name="list" value="<%= today %>">+</button>
  </form>
</div>

<%- include("footer") -%>
